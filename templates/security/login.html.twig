{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="page-register"> 
<div class="row">
            <div class="col-4">
                <img src="https://cdn.pixabay.com/photo/2019/10/01/13/58/coffee-4518353_960_720.png" alt="cake" width="305" height="225"></img>
            </div>
            <div class="col-8">
                 <div class="card" style="width: 30rem;">
                <div class="card-title">
                <h1>Content de te revoir ! ðŸ™‚</h1>
                </div>
                <div class="card-body">
<form class="justify-content-md-center" method="post">


<form action="{{ path('app_login') }}" method="post">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="form-group">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required placeholder="adresse@email.fr" autofocus>
    <small> Nous ne partagerons jamais ton adresse e-mail.</small>
    </div>
    <div class="form-group">
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

{#     
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
 #}
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Souviens-toi de moi
            </label>
        </div>
   
    <button class="btn btn-lg btn-primary" type="submit">
        Je me connecte !
    </button>

</div>
</div>
</div>
</div>
</div>

{% endblock %}
